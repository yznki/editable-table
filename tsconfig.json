{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "verbatimModuleSyntax": true,

    "baseUrl": ".",
    "paths": {
      "#editable-table/*": ["./src/runtime/*"],
      "#editable-table/components/*": ["./src/runtime/components/*"],
      "#editable-table/composables/*": ["./src/runtime/composables/*"],
      "#editable-table/types/*": ["./src/runtime/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
